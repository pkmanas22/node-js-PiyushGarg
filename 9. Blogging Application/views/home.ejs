<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page || Blogify-pkmanas</title>
</head>
<body>
    <%- include('./partials/navbar') %>  <!--  nav bar -->

    <!-- <%= JSON.stringify(blogs) %> -->

    <div class="container mt-4">
        <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col mb-3">
                    <div class="card col d-flex flex-column h-100 ">
                        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Cover Image">
                        <div class="card-body d-flex flex-column flex-fill justify-content-between">
                            <h5 class="card-title"><%- blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    

    <%- include("./partials/script") %>
</body>
</html>