<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page || Blogify-pkmanas</title>
</head>
<body>
    <%- include('./partials/navbar') %>  <!--  nav bar -->

    <!-- <%= JSON.stringify(blogs) %> -->

    <div class="container">
        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Cover Image">
                <div class="card-body">
                  <h5 class="card-title"><%- blog.title %></h5>
                  <p class="card-text"><%- blog.body %></p>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include("./partials/script") %>
</body>
</html>